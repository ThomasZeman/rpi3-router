#!/sbin/openrc-run

container_name="wireguard-wan"

depend() {
        need rpi3-router-base
}

get_container_id() {
	container_id=$(docker ps -aqf "name=$container_name")
}

start() {
	ebegin "Starting $container_name container"
	modprobe wireguard
	if [ ! $? -eq 0 ]; then
	  efail "Cannot load module 'wireguard'"
	  exit 1
	fi

	docker create --name $container_name --cap-add=NET_ADMIN --mount source=rpi3-wireguard-data,target=/data --network=lantowan1 --ip=10.1.3.3 rpi3-wireguard-wan
        if [[ $? != 0 ]]; then
		eend "Failed to start container. Please remove all $container_name container manually"
		exit 1
	fi
	get_container_id
	docker network connect wan $container_id
	docker start $container_id
}

stop() {
	ebegin "Stopping $container_name container"
	get_container_id
        if [ ! -z $container_id ]; then
		docker stop $container_id
		docker rm $container_id
	fi
}
