#!/sbin/openrc-run

container_name="dnsmasq"

depend() {
        need rpi3-router-base
}

get_container_id() {
	container_id="$(docker ps -aqf "name=${container_name}1") $(docker ps -aqf "name=${container_name}2")"
}

start() {
	ebegin "Starting $container_name container"
        docker run -d --name ${container_name}1 --cap-add=NET_ADMIN --network=lantowan1 --ip=10.1.1.4 rpi3-dnsmasq
        docker run -d --name ${container_name}2 --cap-add=NET_ADMIN --network=lantowan2 --ip=10.1.2.4 rpi3-dnsmasq
        if [[ $? != 0 ]]; then
		eend "Failed to start container. Please remove all $container_name container manually"
		exit 1
	fi
	get_container_id
	net_id=1
	for i in $container_id; do
		docker exec $i ip route del default
	        docker exec $i ip route add default via 10.1.$net_id.2
		docker exec $i /bin/sh -c "/bin/echo -e 'server=10.1.$net_id.3' >> /etc/dnsmasq.conf"	
		net_id=$((net_id+1))
	done
}

stop() {
	ebegin "Stopping $container_name container"
	get_container_id
	for i in $container_id; do
		docker stop $i
		docker rm $i
	done
}
